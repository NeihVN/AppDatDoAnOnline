<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NeihVN"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NeihVN">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activities -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".activities.AdminMainActivity"
            android:exported="false" />

        <!-- Seller Activities -->
        <activity
            android:name=".activities.SellerMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FoodFormActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RestaurantFormActivity"
            android:exported="false" />
        <!-- Buyer Activities -->
        <activity
            android:name=".activities.BuyerMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FoodDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RestaurantDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RestaurantListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FoodListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReviewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.VNPayPaymentActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="neihvn" android:host="vnpay" android:pathPrefix="/return" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.VoucherFormActivity"/>
    </application>

</manifest>
